#! /usr/bin/env node

var exec = require('child_process').exec
var GF = require('../');

var repo = process.cwd();

exec('git status', {cwd: repo}, function (err, stdout, stderr) {
  if (err || stderr) throw(repo+' is not a git repository');
});

var gf = new GF({
  repo: repo
});
console.log(new GF);
